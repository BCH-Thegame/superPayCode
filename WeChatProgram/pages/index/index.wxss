.p-head {
    background: #313541;
    display: flex;
    align-items: center;
    font-size: 26rpx;
    background-image: linear-gradient(0deg, #5f6576 0%, #313541 100%);
}

.p-head .ico {
    font-size: 68rpx;
    margin: 8rpx 0 20rpx;
}

.p-head>view {
    color: #fff;
    width: 33.333333%;
    text-align: center;
    padding: 80rpx 0;
}

.p-list>view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #fff;
    padding: 50rpx 0 50rpx 0;
    position: relative;
    text-align: right;
    margin: 0 40rpx;
}

.p-price-name {
    color: #24b53e;
    font-size: 44rpx;
}

.p-price-name text {
    font-size: 28rpx;
}

.p-price {
    color: #888;
    font-size: 28rpx;
    font-weight: 800;
    flex-grow: 2;
    margin-right: 20rpx;
}

.p-list-title {
    font-size: 28rpx;
}

.ad-list{

}
.ad-item{
    word-break:break-all;
    font-size:23rpx;
    display:flex;
    flex-wrap:wrap;
    align-items:center;
    justify-content:space-between;
    position:relative;
    margin:32rpx 40rpx;
    background:rgba(237,238,239, .4);
    padding:20rpx;
    color:#989AA0;
    border-radius:6rpx;
}
.ad-item-touch{
    opacity:.6;
}
.ad-item text{
    width:90%;
    line-height:1.6;
}
.ad-item-left::after{
    content:'';
    border:2px solid #EAEBEC;
    border-left:none;
    border-bottom:none;
    transform:rotate(45deg);
    display:block;
    width:16rpx;
    height:16rpx;
}

.ad-button{
    text-align:center;
    padding:20rpx 0;
    font-size:28rpx;
    border-radius:4rpx;
    background:#EAEBEC;
    margin:0 40rpx;
}
.ad-button-touch{
    background:#989AA0;
    color:#fff;
}
